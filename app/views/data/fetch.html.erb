<table>
  <thead>
    <tr>
      <th>Fact</th>
      <th>Verified</th>
      <th>Created On</th>
    </tr>
  </thead>
  <tbody>
    <% @facts.each do |fact| %>
      <tr>
        <td><%= fact[:text] %></td>
        <td><%= fact[:verified] %></td>
        <td><%= fact[:created_at] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
